{% extends '::layout.html.twig' %}

{% block view %}
<div class="column">
<table class="ui table">
<thead>
<tr><th>Date</th><th>Description</th><th>Amount</th></tr>
<tbody>
{% set balance=0 %}
{% for tx in transactions %}
<tr>
<td>{{ tx.created|date }}</td><td>{{ tx.description }}</td><td>{{ tx.amount }}</td>
{% set balance=balance+tx.amount %}
</tr>
{% endfor %}
</tbody>
<tfoot>
<tr><td colspan="2">Balance</td><td>{{ balance }}</td></tr>
</tfoot>
</table>
</div>
{% endblock %}