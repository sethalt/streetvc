{% extends '::frontend.html.twig' %}

{% block view %}
      {% set valid = form.vars.valid %}
    <div class="two column doubling ui grid ">
      <div class="column">
        {% if type == 'borrower' %}
            <img class="full" src="/img/register/borrower-register.png" alt="register as borrower" />
        {% elseif type == 'lender' %}
            <img class="full" src="/img/register/investor-register.png" alt="register as investor" />
        {% endif %}
      </div>
      <div class="column">
        <div class="ui segment">
          {% if type == 'borrower' %}
            <h2 class="ui header">Register to request loans with Investable</h2>
            <p>Get Funding for your business. Customized Loans.</p>
          {% elseif type == 'lender' %}
            <h2 class="ui header">Register to invest with Investable</h2>
            <p>Invest in businesses and track your ROI.</p>
          {% endif %}
          {#
          <p>{{ 'reg.heading'|trans({}, 'registration') }}</p>
          #}
        </div>
        <form id="register" class="ui fluid form {{ valid ? '' : 'error' }}"
              action="{{ path('register', {type: type}) }}" {{ form_enctype(form) }} method="POST">
          
          {#
          <div class="three fields">
            <div class="field"><a class="ui blue linkedin button"><i class="big white linkedin sign icon"></i> Join via LinkedIn</a></div>
            <div class="field"><a class="ui blue facebook button"><i class="big white facebook sign icon"></i> Join via Facebook</a></div>
            <div class="field"><a class="ui blue googleplus button"><i class="big white google plus sign icon"></i> Join via Google Plus</a></div>
          </div>
