{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
  <a id="logout" class="right floated text item logout" href="{{ path('fos_user_security_logout') }}">Log Out</a>
  <span id="loggedin" class="right floated text item loggedin">Logged in as <a href="{{path('fos_user_profile_show')}}">{{ app.user.username }}</a></span>
{% else %}
  <a id="login" class="right floated text item login" href="{{ path('fos_user_security_login') }}">Log In</a>
  {# <a id="register" class="right floated text item register" href="{{ path('fos_user_registration_register') }}">Register</a> #}
{% endif %}
